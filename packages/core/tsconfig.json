{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": false,
    "declaration": true,
    "declarationMap": false,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["node"],
    "jsx": "react",
    "noEmit": false,
    "outDir": "./lib",
    "moduleResolution": "node",
    "typeRoots": ["../../types", "./node_modules/@types"],
    "lib": [
      "dom",
      "es5",
      "es2015.promise"
    ]
  },
  "include": ["src/**/*"],
}
